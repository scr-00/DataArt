{
  "name": "coldplay-timeline-react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:a11y": "jest --config=jest.a11y.config.js",
    "audit:accessibility": "pa11y-ci --sitemap http://localhost:3000/sitemap.xml",
    "test:screenreader": "echo 'Manual testing required - see ACCESSIBILITY.md'",
    "lighthouse:a11y": "lighthouse --only-categories=accessibility --chrome-flags='--headless' http://localhost:3000"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "axe-core": "^4.8.4",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "pa11y-ci": "^3.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "react",
    "typescript",
    "accessibility",
    "wcag",
    "coldplay",
    "timeline",
    "inclusive-design"
  ]
}
